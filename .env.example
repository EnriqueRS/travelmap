# Variables de entorno para Docker Compose
# Copiar este archivo a .env y ajustar los valores

# ======================
# CONFIGURACIÓN GENERAL
# ======================
NODE_ENV=development

# ======================
# BASE DE DATOS POSTGRESQL
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_USER=travelmap_user
DB_PASSWORD=travelmap_password
DB_NAME=travelmap

# PgAdmin
PGADMIN_EMAIL=admin@travelmap.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# ======================
# BACKEND NESTJS
# ======================
BACKEND_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
FRONTEND_URL=http://localhost:5173

# ======================
# FRONTEND SVELTEKIT
# ======================
FRONTEND_PORT=5173
PUBLIC_API_URL=http://localhost:3001/api
MAPTILER_API_KEY=your-maptiler-api-key-here

# ======================
# REDIS
# ======================
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ======================
# MINIO (S3-compatible)
# ======================
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=travelmap-uploads

# ======================
# NGINX (PRODUCCIÓN)
# ======================
HTTP_PORT=80
HTTPS_PORT=443

# ======================
# MONITORING (OPCIONAL)
# ======================
GRAFANA_PASSWORD=admin123

# ======================
# PRODUCCIÓN
# ======================
# Descomentar y ajustar para producción
# NODE_ENV=production
# FRONTEND_URL=https://your-domain.com
# PUBLIC_API_URL=https://api.your-domain.com
